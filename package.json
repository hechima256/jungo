{
  "name": "jungo",
  "version": "0.2.0",
  "description": "A Jungo game library",
  "author": "hechima256",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hechima256/jungo.git"
  },
  "homepage": "https://hechima256.github.io/jungo/",
  "bugs": {
    "url": "https://github.com/hechima256/jungo/issues"
  },
  "keywords": [
    "go",
    "jungo",
    "pure-go",
    "board-game",
    "game"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui --open false",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
